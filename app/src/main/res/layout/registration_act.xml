<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        tools:context=".RegistrationActivity">
    <EditText
            android:layout_width="0dp"
            android:paddingLeft="20dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:hint="Username"
            android:textColor="@android:color/darker_gray"
            android:textColorHint="@android:color/darker_gray"
            android:background="@drawable/rounded_edge_text_regis_login_act"
            android:ems="10"
            android:id="@+id/main_reg_username" android:layout_marginTop="300dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:paddingLeft="20dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:hint="Email"
            android:background="@drawable/rounded_edge_text_regis_login_act"
            android:textColor="@android:color/darker_gray"
            android:textColorHint="@android:color/darker_gray"
            android:id="@+id/main_reg_email"
            app:layout_constraintTop_toBottomOf="@+id/main_reg_username"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/main_reg_username"
            android:layout_marginTop="8dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            android:hint="Password"
            android:paddingLeft="20dp"
            android:textColor="@android:color/darker_gray"
            android:textColorHint="@android:color/darker_gray"
            android:background="@drawable/rounded_edge_text_regis_login_act"
            android:id="@+id/main_reg_password"
            app:layout_constraintEnd_toEndOf="@+id/main_reg_email"
            app:layout_constraintStart_toStartOf="@+id/main_reg_email"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/main_reg_email"/>
    <Button
            android:text="Register"
            android:layout_width="0dp"
            android:background="@drawable/rounded_edge_button_regis_login_act"
            android:layout_height="wrap_content"
            android:id="@+id/main_reg_registation_submit" app:layout_constraintStart_toStartOf="@+id/main_reg_password"
            app:layout_constraintEnd_toEndOf="@+id/main_reg_password"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/main_reg_password" app:layout_constraintHorizontal_bias="0.511"/>
    <TextView
            android:text="Already have an  account ?"
            android:layout_width="wrap_content"
            android:textSize="16sp"
            android:layout_height="wrap_content"
            android:id="@+id/main_reg_already_have_an_account"
            app:layout_constraintEnd_toEndOf="@+id/main_reg_registation_submit"
            app:layout_constraintStart_toStartOf="@+id/main_reg_registation_submit"
            android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/main_reg_registation_submit"
            app:layout_constraintHorizontal_bias="0.498" android:textColor="@android:color/darker_gray"/>

</androidx.constraintlayout.widget.ConstraintLayout>