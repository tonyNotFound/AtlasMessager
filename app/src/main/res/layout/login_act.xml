<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:paddingLeft="20dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:background="@drawable/rounded_edge_text_regis_login_act"
            android:textColor="@android:color/darker_gray"
            android:textColorHint="@android:color/darker_gray"
            android:id="@+id/login_username" android:layout_marginTop="350dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="0.0" android:hint="Username Or Email"/>
    <EditText
            android:layout_width="0dp"
            android:background="@drawable/rounded_edge_text_regis_login_act"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            android:paddingLeft="20dp"
            android:textColor="@android:color/darker_gray"
            android:textColorHint="@android:color/darker_gray"
            android:id="@+id/login_password" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/login_username"
            app:layout_constraintEnd_toEndOf="@+id/login_username"
            app:layout_constraintStart_toStartOf="@+id/login_username" android:hint="Password"/>
    <Button
            android:text="Log in"
            android:layout_width="0dp"
            android:background="@drawable/rounded_edge_button_regis_login_act"
            android:layout_height="wrap_content"
            android:id="@+id/login_submit" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/login_password" app:layout_constraintEnd_toEndOf="@+id/login_password"
            app:layout_constraintStart_toStartOf="@+id/login_password" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="Forgpt password ?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray"
            android:id="@+id/login_submit_forgot_password"
            app:layout_constraintTop_toBottomOf="@+id/login_submit"
            app:layout_constraintEnd_toEndOf="@+id/login_submit" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="20dp"
            app:layout_constraintHorizontal_bias="0.498"/>
</androidx.constraintlayout.widget.ConstraintLayout>